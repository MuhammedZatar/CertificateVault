<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto py-8">
    <h1 class="text-4xl font-bold text-center text-indigo-700 mb-6">
      <%= @certificate.new_record? ? "New Certificate" : "Edit Certificate" %>
    </h1>

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <%= form_with model: @certificate, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :name, class: "block text-gray-700 font-bold mb-2" %>
          <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Certificate Name" %>
        </div>

        <div class="mb-4">
          <%= f.label :domain, class: "block text-gray-700 font-bold mb-2" %>
          <%= f.text_field :domain, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Domain (e.g., example.com)" %>
        </div>

        <div class="mb-4">
          <%= f.label :file_path, class: "block text-gray-700 font-bold mb-2" %>
          <%= f.text_field :file_path, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Path to the certificate file" %>
        </div>

        <div class="flex items-center justify-between">
          <%= f.submit @certificate.new_record? ? "Create Certificate" : "Update Certificate", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
