<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto py-8">
    <div class="bg-white shadow-md rounded p-6">
      <!-- Certificate Title -->
      <h1 class="text-2xl font-bold text-indigo-700 mb-4"><%= @certificate.name %></h1>

      <!-- Certificate Details -->
      <div class="mb-4">
        <p class="text-gray-700 text-sm"><strong>Domain:</strong> <%= @certificate.domain %></p>
        <p class="text-gray-700 text-sm"><strong>File Path:</strong> <%= @certificate.file_path %></p>
      </div>

      <!-- Action Buttons -->
      <div class="flex space-x-4 mt-4">
        <%= link_to "Edit", edit_certificate_path(@certificate), class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= button_to "Delete", certificate_path(@certificate), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Back to Certificates", certificates_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
</div>
