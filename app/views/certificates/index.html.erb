<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto py-8">
    <h1 class="text-4xl font-bold text-center text-indigo-700 mb-6">Your Certificates</h1>

    <%= link_to "Add New Certificate", new_certificate_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded mb-6 inline-block" %>

    <% if @certificates.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @certificates.each do |certificate| %>
          <div class="bg-white shadow-md rounded p-6">
            <h2 class="text-lg font-bold text-gray-800"><%= certificate.name %></h2>
            <p class="text-gray-600 text-sm">Domain: <%= certificate.domain %></p>
            <p class="text-gray-600 text-sm">CSR cert: <%= certificate.file_path %></p>
            <div class="mt-4 flex justify-between">
              <%= link_to "Edit", edit_certificate_path(certificate), class: "text-indigo-600 hover:text-indigo-800 font-semibold" %>
              <%= button_to "Delete", certificate_path(certificate), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 font-semibold" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center text-gray-600">You currently have no certificates.</p>
    <% end %>
  </div>
</div>
