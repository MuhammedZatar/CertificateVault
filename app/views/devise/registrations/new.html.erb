<h2 class="text-2xl font-bold text-gray-800 mb-4">Sign up</h2>

<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <!-- Display error messages -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="mb-4">
      <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
    </div>

    <!-- Password Field -->
    <div class="mb-4">
      <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mt-2">
          (Minimum <%= @minimum_password_length %> characters)
        </p>
      <% end %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-600" %>
    </div>

    <!-- Submit Button -->
    <div class="mt-6">
      <%= f.submit "Sign up", class: "w-full bg-indigo-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-indigo-700 transition" %>
    </div>
  <% end %>

  <!-- Links -->
  <div class="mt-4 text-sm text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
