<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto py-8">
    <h1 class="text-4xl font-bold text-center text-indigo-700 mb-6">Add New Certificate</h1>

    <div class="bg-white shadow-md rounded p-6 max-w-lg mx-auto">
      <%= form_with model: @certificate, url: admin_certificates_path, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :name, "Certificate Name", class: "block font-bold text-gray-700" %>
          <%= f.text_field :name, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
        <div class="mb-4">
          <%= f.label :domain, "Domain", class: "block font-bold text-gray-700" %>
          <%= f.text_field :domain, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
        <div class="mb-4">
          <%= f.label :file_path, "File Path", class: "block font-bold text-gray-700" %>
          <%= f.text_field :file_path, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
        <div class="flex justify-between">
          <%= link_to "Cancel", admin_certificates_path, class: "text-red-600 hover:text-red-800 font-semibold" %>
          <%= f.submit "Create Certificate", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
