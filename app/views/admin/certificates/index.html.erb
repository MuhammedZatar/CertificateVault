<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto py-8">
    <h1 class="text-4xl font-bold text-center text-indigo-700 mb-6">All Certificates</h1>

    <% if @users.any? { |user| user.certificates.any? } %>
      <% @users.each do |user| %>
        <% if user.certificates.any? %>
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-indigo-600 mb-4"><%= user.email %></h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
              <% user.certificates.each do |certificate| %>
                <div class="bg-white shadow-md rounded p-6">
                  <h3 class="text-lg font-bold text-gray-800"><%= certificate.name %></h3>
                  <p class="text-gray-600 text-sm">Domain: <%= certificate.domain %></p>
                  <p class="text-gray-600 text-sm">File Path: <%= certificate.file_path %></p>
                  <div class="mt-4 flex justify-between">
                    <%= link_to "Edit", edit_admin_certificate_path(certificate), class: "text-indigo-600 hover:text-indigo-800 font-semibold" %>
                    <%= link_to "Delete", admin_certificate_path(certificate), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 font-semibold" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="text-center text-gray-600 text-lg">
        <p>No certificates available.</p>
      </div>
    <% end %>
  </div>
</div>
