<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto py-8">
    <h1 class="text-4xl font-bold text-center text-indigo-700 mb-6">Your Applications</h1>

    <%= link_to "Create New App", new_developer_app_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded mb-6 inline-block" %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @apps.each do |app| %>
        <div class="bg-white shadow-md rounded-lg p-6 transition hover:shadow-xl">
          <h2 class="text-lg font-bold text-gray-800 mb-2"><%= app.name %></h2>
          <p class="text-gray-600 text-sm mb-1">
            <span class="font-semibold">Description:</span> <%= app.description %>
          </p>
          <p class="text-gray-600 text-sm mb-4 overflow-hidden truncate">
            <span class="font-semibold">Access Token:</span> 
            <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-xs font-mono"><%= app.access_token %></span>
          </p>
          <div class="flex justify-between items-center">
            <%= link_to "Edit", edit_developer_app_path(app), 
              class: "text-indigo-600 hover:underline text-sm font-semibold" %>
            <button 
              class="bg-indigo-600 text-white text-xs px-4 py-1 rounded hover:bg-indigo-500 focus:outline-none focus:ring focus:ring-indigo-400"
              onclick="navigator.clipboard.writeText('<%= app.access_token %>'); alert('Access token copied to clipboard!');">
              Copy Token
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>