<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto py-8">
    <h1 class="text-4xl font-bold text-center text-indigo-700 mb-6">Edit Application</h1>
    <%= form_with model: @app, url: developer_app_path(@app), local: true do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= form.label :description, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex justify-between">
        <%= form.submit "Update Application", class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Back", developer_apps_path, class: "text-indigo-500 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
